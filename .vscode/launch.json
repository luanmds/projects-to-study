{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Encryptor",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-encryptor",
            "program": "${workspaceFolder}/EncryptStreamProject/src/Encryptor/bin/Debug/net9.0/Encryptor.dll",
            "args": [],
            "cwd": "${workspaceFolder}/EncryptStreamProject/src/Encryptor",
            "console": "internalConsole",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "DOTNET_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Launch Validator",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-validator",
            "program": "${workspaceFolder}/EncryptStreamProject/src/Validator/bin/Debug/net9.0/Validator.dll",
            "args": [],
            "cwd": "${workspaceFolder}/EncryptStreamProject/src/Validator",
            "console": "internalConsole",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "DOTNET_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Launch WebApi",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-webapi",
            "program": "${workspaceFolder}/EncryptStreamProject/src/WebApi/bin/Debug/net9.0/WebApi.dll",
            "args": [],
            "cwd": "${workspaceFolder}/EncryptStreamProject/src/WebApi",
            "console": "internalConsole",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:5001"
            }
        }
    ],
    "compounds": [
        {
            "name": "Launch All Services",
            "configurations": [
                "Launch Encryptor",
                "Launch Validator", 
                "Launch WebApi"
            ],
            "stopAll": true,
            "preLaunchTask": "build-all"
        }
    ]
}